<div class="container">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Our Flats</h1>
    <%= link_to 'Add Flat', new_flat_path, class: 'btn btn-success' %> <!-- Bouton ajoutÃ© -->
  </div>
<div class="container">
  <div class="d-flex justify-content-center">
    <div class="row mx-0 gx-3"> <!-- Ajout de `gx-3` pour un espacement horizontal -->
      <% @flats.each do |flat| %>
        <div class="col-md-4 mb-3">
          <div class="card" style="width: 20rem;">
            <img src="https://via.placeholder.com/150" class="card-img-top" alt="<%= flat.name %>">
            <div class="card-body">
              <h5 class="card-title"><%= flat.name %></h5>
              <p class="card-text"><%= flat.description.truncate(100) %></p>
              <p><strong>Price per night:</strong> <%= flat.price_per_night %> $</p>
              <p><strong>Max guests:</strong> <%= flat.number_of_guests %></p>
              <a href="<%= flat_path(flat) %>" class="btn btn-primary">View Details</a>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
